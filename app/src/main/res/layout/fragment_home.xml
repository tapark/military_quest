<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.tapark.military_quest.home.HomeViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#222222"
        android:clickable="true"
        android:focusable="true">

        <com.yangp.ypwaveview.YPWaveView
            android:id="@+id/backgroundWaveLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:shapeType="square"
            app:layout_constraintDimensionRatio="1:1"
            app:animatorEnable="true"
            app:textHidden="true"
            app:borderWidthSize="0dp"
            app:frontColor="#03FFFFFF"
            app:behideColor="#03FFFFFF"
            app:max="1000"
            app:progress="600"
            app:strong="50"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/waveText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:textColor="#33FFFFFF"
            android:text="33.123151"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/userInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/profileCardView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="999dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white_5"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/profileImageView"
                    android:scaleType="centerCrop"
                    android:background="@drawable/ic_baseline_person_4_24"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profileCardView">

                <TextView
                    android:id="@+id/subNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="대한민국 공군 상병"
                    android:textColor="@color/white_60"
                    android:textSize="16dp"
                    android:gravity="end|center_vertical" />

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="김두한"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:gravity="end|center_vertical" />

                <TextView
                    android:id="@+id/enterText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="입대일 : 1991.10.22"
                    android:textColor="@color/white_60"
                    android:textSize="16dp"
                    android:gravity="end|center_vertical" />

                <TextView
                    android:id="@+id/retireText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="전역일 : 1991.10.22"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:gravity="end|center_vertical" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>